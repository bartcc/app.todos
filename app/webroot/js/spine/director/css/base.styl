a {
  color: inherit;
  text-decoration: none
}
a:visited { color: inherit; }
a:hover { color: inherit; text-decoration: none; }
a:focus { outline: thin dotted; }

/* Improve readability when focused and hovered in all browsers: h5bp.com/h */
a:hover, a:active { outline: 0; }


/* override bootstrap classes*/
select, textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], .uneditable-input {
  height: inherit;
}
.progress {
  height: 20px;
}
.btn:hover, .btn:focus {
  transition: background-position 0.1s linear 0s;
  background-position: 0 0;
}
label, input, button, select, textarea {
  font-size: inherit;
}
.thumbnail {
    border: 0 none;
}
.breadcrumb {
  background: none repeat scroll 0 0 rgb(183, 184, 182);
  box-shadow: 2px 1px 4px rgba(0, 0, 0, 0.7);
  border: 0 none;
  margin: 2px 0;
  padding: 0;
}
.breadcrumb li {
  cursor: pointer;
}
.breadcrumb li, .breadcrumb > li + li:before, .header {
  text-shadow: 0 1px 0 rgba(221, 221, 221, .5);
  color: inherit;
}
.breadcrumb {
    border-radius: 0 0 0 0;
    padding: 10px 5px;
    position: relative;
    top: 11px;
    z-index: 1;
}
.breadcrumb hr {
  margin-top: 0;
  margin-bottom: 10px;
}
.header .label {
  font-size: 110%
}
.label-default {
    text-shadow: 0px -1px 0 #666;
}
.disabled, .breadcrumb .active {
  opacity: 0.5;
}
.dropdown-menu .disabled:hover {
  background-color: transparent;
  color: inherit;
}
label {
  font-size: 1.3em;
  color: #222222;
  font-size: 1.3em;
}
.label {
  display: inline-block;
}
.the-icons i {
  display: block;
}
[class^="dropdown-"] i:after {
  content: "";
  margin-right: 5px;
}
[class^="dropdown-"] li a:first-child:after {
    content: "";
    margin-right: 10px;
}
[class^="glyphicon-"]:last-child {
/*  margin-right: 5px;*/
}
.glyphicon-white {
  color: white;
}
.glyphicon-red {
  color: red;
}
button:disabled .icon-white {
  opacity: 0.3
}
form {
  margin: 0;
}

/* modal */

.modal-header {
  padding: 9px 15px 25px;
}
.navbar .nav li.dropdown.open > .dropdown-toggle,
.navbar .nav li.dropdown.active > .dropdown-toggle,
.navbar .nav li.dropdown.open.active > .dropdown-toggle {
  color: #BCBCBC;
}
.navbar .nav > li > a:focus, .navbar .nav > li > a:hover {
  color: #BCBCBC;
}
/* small slideshow bug */
.modal-body {
  max-height: 350px;
}
.header label {
    color: #222222;
    font-size: 1.5em;
    font-style: italic;
}
.blueimp-gallery > .description {
  font-style: italic;
  position: absolute;
  top: 50px;
  left: 15px;
  color: #fff;
  opacity: 0.8;
  display: none;
}
.blueimp-gallery-controls > .description {
  display: block;
}